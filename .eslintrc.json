{
  "env": {
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": ["plugin:node/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "linebreak-style": "off",
    "func-names": "off",
    "global-require": "off",
    "import/no-dynamic-require": "off"
  }
}
