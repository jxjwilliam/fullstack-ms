{
	"env": {
		"commonjs": true,
		"es2020": true,
		"node": true
	},
	"extends": [
		"plugin:node/recommended",
		"plugin:markdown/recommended",
		"airbnb",
		"prettier"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": "error",
		"no-unused-vars": "warn",
		"no-console": "off",
		"no-process-exit": "off",
		"object-shorthand": "off",
		"class-methods-use-this": "off",
		"linebreak-style": "off",
		"func-names": "off",
		"global-require": "off",
		"camelcase": "off",
		"import/no-dynamic-require": "off"
	}
}
