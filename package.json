{
  "name": "basic-ms",
  "version": "0.0.1",
  "description": "Basic Microservice framework templates",
  "main": "index.js",
  "scripts": {
    "run-client": "cd client && yarn start",
    "run-gateway": "cd gateway && yarn start",
    "run-api": "cd ms-dbms && yarn start",
    "run-rest": "cd ms-doc && yarn start",
    "run-start": "concurrently \"yarn run-gateway\" \"yarn run-rest\"",
    "run-all": "concurrently \"yarn run-client\" \"yarn run-gateway\" \"yarn run-api\" \"yarn run-rest\"",
    "run-prod": "concurrently \"cd gateway && yarn prod\" \"cd ms-dbms && yarn prod\" \"cd ms-doc && yarn prod\"",
    "dev": "echo \"启动 dev!\" cross-env NODE_ENV=dev yarn run-all",
    "prestart-later": "node bin/update-config.js",
    "start": "cross-env NODE_ENV=development REACT_APP_ENV=dev yarn run-all",
    "stage": "echo \"启动 stage!\" cross-env NODE_ENV=stage yarn run-all",
    "prod": "echo \"启动 production!\" cross-env NODE_ENV=production yarn run-prod",
    "test": "lerna run test",
    "new-version": "lerna version --conventional-commits --yes",
    "commit": "git-cz",
    "diff": "lerna diff",
    "clean": "rimraf dist"
  },
  "keywords": [
    "Basic Implementation",
    "Microservice Templates"
  ],
  "author": "William Jiang Team",
  "license": "MIT",
  "devDependencies": {
    "commitizen": "^4.1.2",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-markdown": "^2.0.0-rc.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "pm2": "^4.4.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "node-fetch": "^2.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
